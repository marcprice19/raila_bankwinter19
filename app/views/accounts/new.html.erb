<h1>Add Account</h1>
<%= form_with(model: @account, local: true) do |f| %>
	<%= f.label :name %>
	<div class="input-field">
		<%= f.text_field :name, required: true, placeholder: 'Name' %>
	</div>
	<%= f.label :balance %>
	<div class="input-field">
		<%= f.number_field :balance, min: 0, step: 0.01 %>
	</div>
	<%= f.submit nil, class: 'waves-effect waves-light btn' %>
<% end %>

